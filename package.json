{
    "name": "@pmis/monorepo",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "turbo run dev",
        "dev:fe": "turbo run dev --filter=@pmis-frontend/*",
        "dev:be": "turbo run dev --filter=@pmis-backend/*",
        "build": "turbo run build",
        "build:fe": "turbo run build --filter=@pmis-frontend/*",
        "build:be": "turbo run build --filter=@pmis-backend/*",
        "test": "turbo run test",
        "test:fe": "turbo run test --filter=@pmis-frontend/*",
        "test:be": "turbo run test --filter=@pmis-backend/*",
        "clean": "turbo run clean && rimraf node_modules pmis-frontend/**/node_modules pmis-backend/**/node_modules",
        "install:all": "pnpm -r install",
        "ci:all": "pnpm -r install --frozen-lockfile",
        "reinstall:all": "pnpm -r clean && pnpm -r install",
        "enforce:ts": "git ls-files | grep -E '\\.js$' | grep -vE 'package-lock\\.json|webpack\\.config\\.cjs|tailwind\\.config\\.cjs|module-federation\\.config\\.(cjs|js)$' && echo 'Found .js files. Only TypeScript allowed.' && exit 1 || echo 'OK: no .js files'",
        "build:prod:fe": "turbo run build:prod --filter=@pmis-frontend/*",
        "serve:prod:fe": "turbo run serve:prod --filter=@pmis-frontend/*",
        "preview:fe": "pnpm run build:prod:fe && pnpm run serve:prod:fe",
        "docs:install": "pnpm --filter @pmis/docs install",
        "docs": "pnpm --filter @pmis/docs run dev",
        "build:docs": "pnpm --filter @pmis/docs run build"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "private": "true",
    "packageManager": "pnpm@9.12.0",
    "workspaces": [
        "pmis-frontend/*",
        "pmis-backend/*",
        "pmis-docs"
    ],
    "pnpm": {
        "overrides": {
            "@module-federation/runtime-core": "0.6.21"
        }
    },
    "devDependencies": {
        "rimraf": "^6.0.1",
        "turbo": "^2.5.6"
    }
}