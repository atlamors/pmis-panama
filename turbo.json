{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "serve": {
            "cache": false,
            "persistent": true
        },
        "tw:watch": {
            "cache": false,
            "persistent": true
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "build/**",
                "bin/**",
                "obj/**"
            ]
        },
        "test": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "coverage/**",
                "test-results/**"
            ]
        },
        "clean": {
            "cache": false
        }
    }
}