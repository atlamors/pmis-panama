{
    "name": "@pmis-frontend/scheduling-mfe",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "start": "ng analytics off && ng serve --host 0.0.0.0 --port 4201",
        "serve": "ng analytics off && ng serve --host 0.0.0.0 --port 4201",
    
        "tw:watch": "tailwindcss -c tailwind.config.cjs -i src/style.css -o src/assets/style.css -w",
        "tw:build": "tailwindcss -c tailwind.config.cjs -i src/style.css -o src/assets/style.css --minify",
    
        "dev": "turbo run serve tw:watch --parallel --filter=@pmis-frontend/scheduling-mfe",
    
        "build": "ng build",
        "build:prod": "ng build -c production",
        "postbuild": "node scripts/write-assets-manifest.mjs",
    
        "serve:prod": "serve -s dist/scheduling-mfe -l 4201 -C",
        "preview:prod": "pnpm run build:prod && pnpm run postbuild && pnpm run serve:prod",
    
        "test": "ng test",
        "lint": "ng lint || true",
        "typecheck": "tsc -p tsconfig.app.json --noEmit",
        "clean": "rimraf dist node_modules"
      },
    "dependencies": {
        "@angular/animations": "^20.3.0",
        "@angular/common": "^20.3.0",
        "@angular/compiler": "^20.3.0",
        "@angular/core": "^20.3.0",
        "@angular/forms": "^20.3.0",
        "@angular/platform-browser": "^20.3.0",
        "@angular/platform-browser-dynamic": "^20.3.0",
        "@angular/router": "^20.3.0",
        "@ng-icons/core": "^32.1.0",
        "@ng-icons/heroicons": "^32.1.0",
        "primeicons": "^7",
        "primeng": "^17",
        "rxjs": "^7.8.2",
        "tslib": "^2.8.1",
        "zone.js": "~0.15.1"
    },
    "devDependencies": {
        "@angular-architects/module-federation": "^20.0.0",
        "@angular-builders/custom-webpack": "^20.0.0",
        "@angular-devkit/build-angular": "^20.3.2",
        "@angular/cli": "^20.3.2",
        "@angular/compiler-cli": "^20.3.0",
        "@module-federation/runtime-core": "0.6.21",
        "autoprefixer": "^10.4.21",
        "http-server": "^14.1.1",
        "postcss": "^8.5.6",
        "rimraf": "^5.0.5",
        "serve": "^14.2.5",
        "tailwindcss": "^3.4",
        "typescript": "^5.9.2"
    }
}